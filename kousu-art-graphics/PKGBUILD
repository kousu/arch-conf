pkgname=kousu-art-graphics
pkgdesc="Configuration management for kousu's image editing"

# load common settings; be aware if you ever split up this repo.
[ -f ../lib/lib.PKGBUILD ] && cp -lf ../lib/lib.PKGBUILD .lib.PKGBUILD
. .lib.PKGBUILD || exit 1

depends=(
  kousu-desktop

  inkscape # svg editor
  krita    # paint
  #gimp    # raster editor
)

optdepends=(
  'pinta: [aur] the BEST modern paint program'
)
