pkgname=kousu-bootloader-bios
pkgdesc="Configuration management: BIOS-style bootloader"

# load common settings; be aware if you ever split up this repo.
[ -f ../lib/lib.PKGBUILD ] && cp -lf ../lib/lib.PKGBUILD .lib.PKGBUILD
. .lib.PKGBUILD || exit 1

conflicts=(
  kousu-bootloader-efi
)

depends=(
  base
  limine   # https://limine-bootloader.org
  linux
)

backup=(
  etc/mkinitcpio.d/linux.preset
)
