[Trigger]
Operation = Install
Operation = Upgrade
Type = Package
Target = kousu-bootloader-bios

[Trigger]
Operation = Install
Operation = Upgrade
Type = Path
Target = /etc/cmdline.d/*

[Action]
Description = Syncing /etc/cmdline.d/ to /boot/limine/limine.conf
When = PostTransaction
Exec = /usr/bin/limine-mkconf
