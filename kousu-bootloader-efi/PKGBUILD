pkgname=kousu-bootloader-efi
pkgdesc="Configuration management: EFI-style bootloader"

# load common settings; be aware if you ever split up this repo.
[ -f ../lib/lib.PKGBUILD ] && cp -lf ../lib/lib.PKGBUILD .lib.PKGBUILD
. .lib.PKGBUILD || exit 1

backup=(
  etc/mkinitcpio.d/linux.preset
)

depends=(
  linux
  mkinitcpio
)

optdepends=(
  'systemd: for default ArchLinux boot splash'
)

conflicts=(
  kousu-bootloader-bios
)
