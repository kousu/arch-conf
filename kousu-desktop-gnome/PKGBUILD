pkgname=kousu-desktop-gnome
pkgdesc="Configuration management for kousu's GNOME install"

# load common settings; be aware if you ever split up this repo.
[ -f ../lib/lib.PKGBUILD ] && cp -lf ../lib/lib.PKGBUILD .lib.PKGBUILD
. .lib.PKGBUILD || exit 1

backup=(
  src/etc/dconf/db/gdm.d/02-logo
  var/lib/AccountsService/users/root
)

depends=(
  kousu-desktop

  networkmanager # we actually use iwd but GNOME only speaks this; luckily NetworkManager can talk to iwd for us.

  #gdm-settings
  #dconf-editor

  # unsure about:
  #decibel
  #gnome-music
  #gnome-software # -> only good for Flathub unless replaced with gnome-software-packagekit-plugin-appstream-git from AUR
  #gnome-font-viewer
  lollypop   # music library
  gnome-podcasts
  video-trimmer

  # `pacman -Qg gnome` minus the apps I don't want
  epiphany  # web browser
  gdm
  gnome-backgrounds
  gnome-calculator
  gnome-calendar
  geary   # email
  gnome-characters
  gnome-clocks
  gnome-color-manager
  gnome-connections # VNC/RDP/SPICE
  gnome-console
  gnome-contacts
  gnome-control-center
  decoder   # QR codes
  gnome-disk-utility
  #gnome-font-viewer
  gnome-keyring
  #seahorse   # GUI for gnome-keyring`
  gnome-logs
  gnome-maps
  gnome-menus
  gnome-recipes
  gnome-remote-desktop
  gnome-shell
  #gnome-software
  gnome-system-monitor
  gnome-text-editor
  #gnome-tweaks
  gnome-tour
  gnome-user-docs
  gnome-user-share
  gnome-weather
  grilo-plugins
  gvfs
  gvfs-smb # Windows network drives
  gvfs-mtp # phone/camera drives
  gvfs-goa # cloud drives on the desktop
  loupe    # image viewer
  nautilus # file browser
  orca     # screen reader
  papers   # document viewer
  showtime # video player
  gst-libav # extra codecs for showtime
  gst-plugins-bad
  gst-plugins-ugly # extra extra codecs mostly for non-libre formats
  snapshot # camera
  sushi    # part of nautilus
  file-roller # archiver

  power-profiles-daemon # beware: conflicts with tlp and tuned, if you choose to use those

  gnome-shell-extension-appindicator
  gnome-shell-extension-caffeine
  gnome-shell-extension-vitals
  gnome-shell-extensions

  # GNOME implies Wayland on Arch now
  # These are wayland-specific packages that we need for that (maybe they belong in kousu-desktop-wayland?)
  qt5-wayland
  qt6-wayland    # necessary to make Qt/KDE apps not complain
  wl-clipboard

  transmission-gtk
)

package() {
  _package

  chmod 775 "${pkgdir}"/var/lib/AccountsService/
  chmod -R u=rwX,go= "${pkgdir}"/var/lib/AccountsService/users
}
