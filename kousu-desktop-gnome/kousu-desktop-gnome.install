#!/bin/bash

post_install() {
  post_upgrade
}

post_upgrade() {
  systemctl enable --now NetworkManager # NB: we actually use iwd; but this is here to glue GNOME into it
  systemctl enable --now gdm
}

pre_remove() {
  systemctl disable --now gdm
  systemctl disable --now NetworkManager # NB: we actually use iwd; but this is here to glue GNOME into it
}
