pkgname=kousu-desktop-i3
pkgdesc="Configuration management for a GUI based on https://i3wm.org/"

# load common settings; be aware if you ever split up this repo.
[ -f ../lib/lib.PKGBUILD ] && cp -lf ../lib/lib.PKGBUILD .lib.PKGBUILD
. .lib.PKGBUILD || exit 1

depends=(
  kousu-desktop

  #vim
  htop   # resource/process monitor
  ranger # curses file browser
  bluetui # bluetooth manager (XXX won't work without bluetooth being installed)
  impala # TUI for iwd network management
  #lynx, or elinks, links, w3m # terminal browser

  # GUI
  #xorg-xhost
  xorg-server  # XXX tricky: this makes more sense in kousu-desktop, but with the Wayland transition that's unclear; GNOME doesn't even have a X version anymore
  xorg-xinit
  xorg-xmodmap
  xorg-xkill
  xorg-xev
  xorg-fonts-100dpi
  xorg-fonts-75dpi
  noto-fonts-emoji # Google's Android emoji fonts, with the colourful faces and whatnot
  # lightdm ?
  xclip
  peek  # screen recorder

  # for a tinier DE:
  i3-wm
  dmenu
  i3status
  dex # default i3 config file uses this to run ~/.config/autostart
  xwallpaper # load wallpaper
  xfce4-artwork # default wallpapers
  brightnessctl
  xss-lock
  xsecurelock
  #xautolock
  #i3lock
  arandr
  pavucontrol # volume control
  scrot       # screenshots

  gvfs  # automounting drives (from GNOME but used by Thunar)

  redshift  # KDE and GNOME have this built in
  passmenu
  eom # image viewer; alts: geeqie, eog, feh, gwenview
  xarchiver # alts: file-roller
  xreader # PDFs
  thunar
  thunar-archive-plugin
  thunar-volman
  l3afpad
  #featherpad # l3afpad + tabs, regex search, syntax highlighting
  #mousepad   # l3afpad with a few more options
  sakura # alts: xterm, rxvt, gnome-terminal, termite, sakura

  transmission-gtk
)
