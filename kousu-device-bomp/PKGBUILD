pkgname=kousu-device-bomp
pkgdesc="Configuration management for kousu's \"bomp\" laptop"

# load common settings; be aware if you ever split up this repo.
[ -f ../lib/lib.PKGBUILD ] && cp -lf ../lib/lib.PKGBUILD .lib.PKGBUILD
. .lib.PKGBUILD || exit 1

depends=(
  linux-firmware-intel
  kousu-bootloader-efi
  kousu-desktop-niri
  kousu-laptop-mode

  # Programming
  julia
)

optdepends=(
  kousu-art-audio
)

provides=(kousu-device)
conflicts=(kousu-device)
