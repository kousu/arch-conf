pkgname=kousu-didnt-your-mother-always-tell-you
pkgdesc="- that sharing is caring."

# load common settings; be aware if you ever split up this repo.
[ -f ../lib/lib.PKGBUILD ] && cp -lf ../lib/lib.PKGBUILD .lib.PKGBUILD
. .lib.PKGBUILD || exit 1

depends=(
  kousu-media

  transmission-gtk # torrents
  transmission-cli
  transmission-daemon

  nicotine+ # Soulseek network

  magic-wormhole

  kubo # ipfs

  # TODO: decide between navidrome and jellyfin
  navidrome

  jellyfin-server
  jellyfin-web
)

optdepends=(
  'airdcpp-webclient: [aur] DC++' # alts: ncdc, eiskaltdcpp
  'gtk-gnutella: [aur]'
)
