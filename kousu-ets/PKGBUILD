pkgname=kousu-ets
pkgdesc="Configuration management for kousu's school life"
arch=('any')
url="https://github.com/kousu/arch-conf"

_pkgver() {
  [ -r "$startdir"/.pkgver ] && cat "$startdir"/.pkgver || (echo "r$(git rev-list --count HEAD).commit=$(git describe --always --dirty | sed s/-/+/g)")
}
pkgver="$(_pkgver)"
pkgrel=1

depends=(
  # needed to sign up for courses
  icedtea-web
  java-environment=17
  
  # XXX ^ split these into subpackages, again. I just really don't want to have to
  # maybe I could make a split package?
  #octave
  #matlab-support # XXX AUR
)