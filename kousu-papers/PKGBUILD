pkgname=kousu-papers
pkgdesc="Configuration management for apps for writing papers"

# load common settings; be aware if you ever split up this repo.
[ -f ../lib/lib.PKGBUILD ] && cp -lf ../lib/lib.PKGBUILD .lib.PKGBUILD
. .lib.PKGBUILD || exit 1

depends=(
  # docs
  libreoffice-fresh  # docs/spreadsheets/presentations
  libreoffice-fresh-fr

  ## Academic typesetting :: GUI
  # TODO: evaluate which of these I want to settle on; I think I've used texstudio before and it's the most solid but also clunkiest
  #gnome-latex
  #gummi
  #hevea
  #kile
  #rubber
  #texstudio
  #texmaker

  ## Academic typesetting
  typst
  tinymist
  citations   # Gnome .bib manager
  gnome-font-viewer
  hieroglyphic   # drawing -> LaTeX symbol

  pdfgrep

  code  # vscode. sigh. it's the only good editor for typst

  ttf-fira-code
  ttf-libertinus
  otf-libertinus
  adobe-source-sans-fonts
)

optdepend=(
  'vscode: for writing .typ. Tips: install typstyle and configure format-on-save; install the tinymist extension; configure build-on-save; configure displaying outputs in the *system* PDF viewer because the built in one is slow.'
  'typstyle: for .typ formatting; currently in the AUR.'
  'zotero-bin: for managing citations; best if you acquiesce to use their cloud service.'
)
