pkgname=kousu-school
pkgdesc="Configuration management for kousu's school life"

# load common settings; be aware if you ever split up this repo.
[ -f ../lib/lib.PKGBUILD ] && cp -lf ../lib/lib.PKGBUILD .lib.PKGBUILD
. .lib.PKGBUILD || exit 1

depends=(
  kousu-papers

  #gvfs-onedrive  # requires approval by ETS's admin

  # needed to sign up for courses
  icedtea-web
  java-environment=17

  hieroglyphic  # _drawing_ to LaTeX dictionary

  pdfgrep # for scanning course notes and papers quickly

  octave  # scientific programming language; matlab clone

  wine    # for annoying windows-only engineering apps
)

optdepends=(
  # comms
  # This one isn't /really/ optional, but it's listed here because it's proprietary and hence AUR-only.
  'zoom: [aur] video calling'
  'matlab: [currently broken]'
)
