pkgname=kousu-work
pkgdesc="Configuration management for kousu's job life"
arch=('any')
url="https://github.com/kousu/arch-conf"

_pkgver() {
  [ -r "$startdir"/.pkgver ] && cat "$startdir"/.pkgver || (echo "r$(git rev-list --count HEAD).commit=$(git describe --always --dirty | sed s/-/+/g)")
}
pkgver="$(_pkgver)"
pkgrel=1

depends=(
  kousu-desktop
  kousu-sysadmin
  kousu-papers

  libfido2 #XXX is this still needed? yubikeys kind of Just Work now

  workrave  # work timer / RSI alarm
  blanket   # white noise focus sounds

  # docs
  libreoffice-fresh  # docs/spreadsheets/presentations
)

optdepends=(
  kousu-school
)

package() {
  cd "${startdir}/src/"   # instead of prepare() { cp "${startdir}/src/." "${srcdir}" }

  cp -rp * "${pkgdir}"
}
